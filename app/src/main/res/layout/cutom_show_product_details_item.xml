<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="0.75dp"
    android:padding="10dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtShowDetail_ProductId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="ProductId"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imgShowDetail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/txtShowDetail_ProductId"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/txtShowDetail_detailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgShowDetail"
        android:layout_below="@id/txtShowDetail_ProductId"
        android:layout_marginLeft="15dp"
        android:text="Detail ID"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtShowDetail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgShowDetail"
        android:layout_below="@id/txtShowDetail_detailId"
        android:layout_marginLeft="15dp"
        android:text="Product Price"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"/>


</RelativeLayout>